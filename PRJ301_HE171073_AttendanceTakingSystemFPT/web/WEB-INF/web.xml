<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TimeTableController</servlet-name>
        <servlet-class>controller.instructor.TimeTableInstructorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableStudentController</servlet-name>
        <servlet-class>controller.student.TimeTableStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendController</servlet-name>
        <servlet-class>controller.instructor.TakeAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAttendController</servlet-name>
        <servlet-class>controller.instructor.UpdateAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendController</servlet-name>
        <servlet-class>controller.instructor.ViewAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportAttendController</servlet-name>
        <servlet-class>controller.instructor.ReportAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportAttendStudentController</servlet-name>
        <servlet-class>controller.student.ReportAttendStudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeTableController</servlet-name>
        <url-pattern>/instructor/timetable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableStudentController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendController</servlet-name>
        <url-pattern>/instructor/takeattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAttendController</servlet-name>
        <url-pattern>/instructor/updateattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendController</servlet-name>
        <url-pattern>/instructor/viewattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportAttendController</servlet-name>
        <url-pattern>/instructor/reportattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportAttendStudentController</servlet-name>
        <url-pattern>/student/reportattend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
